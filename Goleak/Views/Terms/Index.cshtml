    <script type="text/javascript">
        $(document).ready(function () {
            $("#btnCreate").click(function () {
                $.blockUI({ message:' <div> Wait a moment. </br> If it is your first time, it can take 5 minutes but it worth... </div>' });
            });
        });
    </script>
    @if (TempData["msg"] != null)
    {
        var msg = Html.Raw(new System.Web.Script.Serialization.JavaScriptSerializer().Serialize(TempData["msg"]));

        TempData.Remove("msg");

        <script type="text/javascript">
            $(document).ready(function () {
                var notificacoes = @msg;
                for (var i = 0, len = notificacoes.length; i < len; i++) {
                    var notificacao = notificacoes[i];
                    alert(notificacao.Texto);
                    //ShowNoty(notificacao.Texto, notificacao.Tipo);
                }
            });
        </script>
    }

    <style type="text/css">
        .press-it-btn {
            width: 150px; /* Specify width and height of the image. Height is value of each individual button graphic */
            background-image: url(../Images/facebook_signin.png); /* Add the image as a background */
            background-position: top; /* Set the position to the top */
            text-indent: -9999px; /* Send the rendered HTML wording off screen */
            outline: none;
            height: 25px;
        }

            .press-it-btn:hover, #demo p a.press-it-btn:focus {
                background-position: center; /* Set the position to the center */
            }

            .press-it-btn:active {
                background-position: bottom; /* Set the position to the bottom */
            }
    </style>
</head>
<body>

    <div id="fb-root"></div>
    <script>
(function(d, s, id) {
    var js, fjs = d.getElementsByTagName(s)[0];
    if (d.getElementById(id)) return;
    js = d.createElement(s); js.id = id;
    js.src = "//connect.facebook.net/en_US/all.js#xfbml=1&appId=654799201201776";
    fjs.parentNode.insertBefore(js, fjs);
}(document, 'script', 'facebook-jssdk'));</script>

    <div class="container">

        <div class="masthead">
            <span>
                <img src="@Url.Content("~/Images/goleak.png")" />
            </span>


        </div>

        <!-- Jumbotron -->
        <div class="jumbotron">
            <h1>..:: GOLEAK TERMS ::..</h1>
            
