@model ICollection<AuthenticationClientData>

@if (Model.Count == 0)
{
    <div class="message-info">
        <p>Erro com o Facebook.</p>
    </div>
}
else
{
    using (Html.BeginForm("ExternalUpdate", "Account", new { ReturnUrl = ViewBag.ReturnUrl }))
    {
    @Html.AntiForgeryToken()

        foreach (AuthenticationClientData p in Model)
        {
            <button class="btn" id="btnUpdate" type="submit" name="provider" value="@p.AuthenticationClient.ProviderName" title="Log in using your @p.DisplayName account">Update Facebook Friends</button>
        }
    }
}
