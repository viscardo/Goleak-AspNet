@{
    ViewBag.Title = "About";
}



<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>GoLeak</title>
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    <meta name="viewport" content="width=device-width" />

    <meta property="og:title" content="GOLEAK - Anonymous Network." />
    <meta property="og:description" content="Say whatever your want about your friends from Facebook without them knowing." />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="http://www.goleak.com" />
    <meta property="og:image" content="http://www.goleak.com/Images/goleak.png" />
    <meta property="og:site_name" content="Goleak.com" />


    @Scripts.Render("~/bundles/jquery")
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    @Styles.Render("~/Content/bootstrap")
    @Scripts.Render("~/bundles/bootstrap")

    <script>
        (function (i, s, o, g, r, a, m) {
            i['GoogleAnalyticsObject'] = r; i[r] = i[r] || function () {
                (i[r].q = i[r].q || []).push(arguments)
            }, i[r].l = 1 * new Date(); a = s.createElement(o),
m = s.getElementsByTagName(o)[0]; a.async = 1; a.src = g; m.parentNode.insertBefore(a, m)
